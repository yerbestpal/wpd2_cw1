<!DOCTYPE html>
<html lang="en">
<head>
    {{>partials/head}}
</head>
<body class="d-flex flex-column min-vh-100">
{{>partials/navbar}}
<div class="container flex-fill">
    <div class="d-flex justify-content-center">
        <h1>Week {{weekNumber}}</h1>
    </div>
    <div class="d-flex justify-content-center">
        <h2>{{fromDate}} - {{toDate}}</h2>
    </div>
    <ul class="pagination d-flex justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true"><i class="bi bi-arrow-left"></i></a>
        </li>
        <li class="page-item active" aria-current="page">
            <a class="page-link" href="/">Current</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="/next/{{weekNumber}}"><i class="bi bi-arrow-right"></i></a>
        </li>
    </ul>
    <div class="card mx-5">
        <div class="card-body p-3 d-grid gap-3">
            <h4>Incomplete</h4>
            {{#incompleteGoals}}
                {{>goals/goal}}
            {{/incompleteGoals}}
            {{^incompleteGoals}}
                <div class="d-flex justify-content-center">
                    <p class="fw-bold text-center fs-2 text-muted">All caught up!</p>
                </div>
            {{/incompleteGoals}}
            <div class="d-flex justify-content-center">
                <a href="/new">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                </a>
            </div>
            <h4>Complete</h4>
            {{#completeGoals}}
                {{>goals/goal}}
            {{/completeGoals}}
        </div>
    </div>
</div>
{{>partials/footer}}
<script
        crossorigin="anonymous"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
></script>
</body>
</html>